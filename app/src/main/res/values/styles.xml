<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OptionItemTextView">
        <item name="android:background">@drawable/white_color_bg_selector</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#3D414D</item>
        <item name="android:textSize">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Splash" parent="@style/Theme.AppCompat">
        <item name="windowBackground">@android:color/holo_blue_dark</item>
    </style>

    <style name="DialogActivity" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
